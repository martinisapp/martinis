# ========================================
# Martinis Docker Environment Configuration
# ========================================
# Copy this file to .env and customize as needed
# cp .env.example .env

# ========================================
# MySQL Database Configuration
# ========================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=martinis
MYSQL_USER=martinis_user
MYSQL_PASSWORD=martinis_pass
MYSQL_PORT=3306

# ========================================
# Application Configuration
# ========================================
APP_PORT=8080

# ========================================
# Admin User Configuration
# ========================================
# These credentials will be used to create the initial admin user
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User

# ========================================
# phpMyAdmin Configuration (optional)
# ========================================
PHPMYADMIN_PORT=8081

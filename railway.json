{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml"
  },
  "deploy": {
    "startCommand": "java $JAVA_OPTS -jar target/dependency/webapp-runner.jar --expand-war --port $PORT target/spring-mvc-webapp.war",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "SKIP_SCHEMA_INIT": "true"
      }
    }
  }
}
